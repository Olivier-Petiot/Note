.comment.clearfix
    .content
        %p.comment_content= comment.comment
        %p.comment_author= comment.user.email
        %p.comment_author= time_ago_in_words(comment.created_at)

    .buttons
        = link_to "Edit", edit_post_comment_path(comment.post, comment)
        = link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Please confirm" }