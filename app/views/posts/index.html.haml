.wrapper_with_padding
    #notes.clearfix
        - unless @posts.blank?
            - @posts.each do |post|
                %a{ href: (url_for [post])}
                    .note   
                        %p.title= post.title
                        %p.date= "Created"+ " "+time_ago_in_words(post.created_at) + " "+"ago"
                        %p.date= post.user.email
                        %p.comment_count= pluralize post.comments.count, "comment" 
        - else 
            %h2 Add a Post
            %p You haven't created any posts yet
            %button= link_to "New Post", new_post_path
