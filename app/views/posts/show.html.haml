#post_content
    %h1.title= @post.title
    %p= simple_format(@post.content)
        
    #comments
        %h2
            = @post.comments.count
            comments
        %p= render @post.comments
            
        %h3 Reply to thread
        = render "comments/form"
        %p
        .buttons
            .a
                = link_to "Edit", edit_post_path(@post)
                = link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure  ?"}
                = link_to "Home", root_path
